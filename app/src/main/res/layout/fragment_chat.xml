<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/dashboard_icon"
                android:layout_width="400dp"
                android:layout_height="85dp"
                android:layout_marginStart="3dp"
                android:layout_gravity="center"
                android:src="@mipmap/top_chat" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@mipmap/chat1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@mipmap/chat2" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@mipmap/chat3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:src="@mipmap/chat4" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/mainRelative"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignBottom="@id/mainRelative"
            android:src="@mipmap/input" />
    </LinearLayout>

</RelativeLayout>