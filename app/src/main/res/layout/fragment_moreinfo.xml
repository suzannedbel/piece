<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="-20dp"
        android:src="@mipmap/higher" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="210dp"
        android:src="@mipmap/lower" />

    <ImageView
        android:id="@+id/member_count_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="210dp"
        android:src="@mipmap/bottom2"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/location_button"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="190dp"
        android:src="@mipmap/location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="5dp">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <include layout="@layout/layout_profile_alex" />

                <include layout="@layout/layout_profile_rafael" />

                <include layout="@layout/layout_profile_gaya" />

                <include layout="@layout/layout_profile_suzie" />

                <include
                    android:id="@+id/justus_profile_image"
                    layout="@layout/layout_profile_justus" />

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#F78181"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/want_item_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/object1" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/object2" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/object3" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/object4" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/object5" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/chat" />

</FrameLayout>